import random
words = ['apple', 'banana', ' orange']
word = random.choice(words)
print('answer: ' + word)
letters = ''

while True:
    succeed = True
    print()
    for w in word:  # a p p l e
        if w in letters:
            print(w, end=' ')
        else:
            print('_', end=' ')
            succeed = False
    print()

    if succeed:
        print('Success')
        break

    letter = input('Input letter > ')   # 사용자 입력 받기
    if letter not in letters:
        letters += letter

    if letter in word:
        print('Correct')
    else:
        print('Wrong')
